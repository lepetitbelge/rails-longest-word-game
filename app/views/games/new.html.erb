<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
        <h1 id="game-title">word grid</h1>
      <div class="list-group">
        <div class="list-inline">
          <ul>
            <% @letters.each do |letter| %>
            <li class="list-inline-item letter-box"><%= letter %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <p>What's the longest word you can find?</p>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <form action="/score" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="word" placeholder="word..">
          <button type="submit" class="btn btn-primary form-control">Play!</button>
        </div>
      </form>
    </div>
  </div>
</div>
